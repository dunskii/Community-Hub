# =============================================================================
# Community Hub - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# Replace all CHANGEME values with secure passwords/secrets.
# Boolean values must be exactly "true" or "false" (case-sensitive).
# =============================================================================

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=3002

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_DEBUG_MODE=true

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=http://localhost:5173  # Comma-separated list of allowed origins

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://community_hub:CHANGEME@localhost:5433/community_hub

# -----------------------------------------------------------------------------
# Cache & Sessions (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://:CHANGEME@localhost:6379

# -----------------------------------------------------------------------------
# Search (Elasticsearch)
# -----------------------------------------------------------------------------
ELASTICSEARCH_URL=http://localhost:9200
# ELASTICSEARCH_API_KEY=              # Optional: only if auth is enabled
# ES_NUMBER_OF_REPLICAS=0             # Optional: index replica count (0 for single-node dev)

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------
SESSION_SECRET=                        # Required: random 64-character string for session cookies
JWT_SECRET=                            # Required: random 64-character string for JWT signing (can be same as SESSION_SECRET)
ENCRYPTION_KEY=                        # Required: random 32-byte base64-encoded AES-256 key

# JWT Token Expiry
JWT_ACCESS_TOKEN_EXPIRY=15m            # Access token lifetime (e.g., 15m, 1h)
JWT_REFRESH_TOKEN_EXPIRY=7d            # Refresh token lifetime (e.g., 7d, 14d)
JWT_REFRESH_TOKEN_EXPIRY_REMEMBER_ME=30d  # Extended refresh token lifetime with "remember me"

# Password Security
BCRYPT_COST_FACTOR=12                  # bcrypt cost factor (10-14 recommended, higher = more secure but slower)

# -----------------------------------------------------------------------------
# Maps (Mapbox)
# -----------------------------------------------------------------------------
MAPBOX_ACCESS_TOKEN=                   # Required: Mapbox public access token (backend geocoding)
VITE_MAPBOX_ACCESS_TOKEN=              # Required: Mapbox GL JS public token (frontend maps, safe for client)

# -----------------------------------------------------------------------------
# Translation (Google Translate)
# -----------------------------------------------------------------------------
GOOGLE_TRANSLATE_API_KEY=              # Required: Google Cloud Translation API key

# -----------------------------------------------------------------------------
# OAuth Providers (Optional - Phase 2+)
# -----------------------------------------------------------------------------
# GOOGLE_OAUTH_CLIENT_ID=              # Optional: Google OAuth 2.0 client ID
# GOOGLE_OAUTH_CLIENT_SECRET=          # Optional: Google OAuth 2.0 client secret

# -----------------------------------------------------------------------------
# Social Integration (Facebook/Instagram) - Optional
# -----------------------------------------------------------------------------
# FACEBOOK_APP_ID=                     # Optional: Facebook app ID
# FACEBOOK_APP_SECRET=                 # Optional: Facebook app secret

# -----------------------------------------------------------------------------
# Email (Mailgun)
# -----------------------------------------------------------------------------
MAILGUN_API_KEY=                       # Required: Mailgun API key
MAILGUN_DOMAIN=                        # Required: Mailgun sending domain
FRONTEND_URL=http://localhost:5173     # Frontend URL for email links (verification, password reset)

# -----------------------------------------------------------------------------
# SMS & WhatsApp (Twilio)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=                    # Required: Twilio account SID
TWILIO_AUTH_TOKEN=                     # Required: Twilio auth token
TWILIO_PHONE_NUMBER=                   # Required: Twilio SMS sender number
TWILIO_WHATSAPP_NUMBER=                # Required: Twilio WhatsApp sender number

# -----------------------------------------------------------------------------
# Push Notifications (Firebase) - Optional
# -----------------------------------------------------------------------------
# FIREBASE_PROJECT_ID=                 # Optional: Firebase project ID for push notifications
# FIREBASE_PRIVATE_KEY=                # Optional: Firebase service account private key
# FIREBASE_CLIENT_EMAIL=               # Optional: Firebase service account email

# -----------------------------------------------------------------------------
# Google Business Profile
# -----------------------------------------------------------------------------
GOOGLE_BUSINESS_API_KEY=               # Required: Google Business Profile API key

# -----------------------------------------------------------------------------
# CDN & DNS (Cloudflare)
# -----------------------------------------------------------------------------
CLOUDFLARE_ZONE_ID=                    # Optional: Cloudflare zone identifier
CLOUDFLARE_API_TOKEN=                  # Optional: Cloudflare API token
CDN_URL=                               # Optional: CDN base URL for static assets
CDN_ENABLED=false                      # Enable CDN for media delivery

# -----------------------------------------------------------------------------
# Storage (Local Disk on DigitalOcean Droplets)
# -----------------------------------------------------------------------------
STORAGE_PATH=./uploads                 # Local media storage path
STORAGE_MAX_SIZE_GB=50                 # Maximum storage allocation in GB
STORAGE_BACKUP_PATH=./backups          # Backup storage path
