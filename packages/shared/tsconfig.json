{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts"],
  // Exclude test files but NOT __tests__/fixtures.ts (needed by src/testing.ts entry point).
  // Other packages use broader "src/**/__tests__/**" excludes since they don't export test helpers.
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/__tests__/*.test.ts"]
}
