{
  "name": "@community-hub/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@community-hub/shared": "workspace:*",
    "@elastic/elasticsearch": "^9.2.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.35.0",
    "mailgun.js": "^12.7.0",
    "pg": "^8.18.0",
    "pino": "^9.6.0",
    "sharp": "^0.34.5",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/dompurify": "^3.2.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^3.0.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^7.3.0",
    "rimraf": "^6.0.0",
    "tsx": "^4.19.0",
    "vitest": "^3.0.0"
  }
}
